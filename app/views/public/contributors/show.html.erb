<div class="max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">
    <%= contributor.names.join(", ") %>
  </h1>

  <table class="w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="w-16 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hash</th>
        <th scope="col" class="w-1/3 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
        <th scope="col" class="w-32 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% contributor.commits.reverse.each_with_index do |commit, i| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><a href="https://github.com/ruby/ruby/commit/<%= commit.sha %>" class="text-sky-600 hover:text-sky-700 hover:underline"><%= commit.sha.first(7) %></a></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= commit.time.strftime("%Y-%m-%d") %></td>
          <td class="px-6 py-4 text-sm font-medium text-gray-900 break-words"><%= commit.message %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

